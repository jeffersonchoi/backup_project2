<h1>Users Lists</h1>


<table>
	<tr>
		<th> First Name </th>
		<th> Last Name </th>
    <th> Email </th>
		<th> Items Details</th>
		<th> Users Details</th>
	</tr>
    <% @users.each do |user| %>
		<tr>
			<td> <%= user.first_name %> </td>
			<td> <%= user.last_name %> </td>
      <td> <%= user.email %> </td>
      <td> <%= link_to "#{user.first_name}'s Items List", user_items_path(user) %>
			<td> <%= link_to "#{user.first_name}'s Details", particular_user_path(user) %>
      <% end %>
		</tr>
</table>
